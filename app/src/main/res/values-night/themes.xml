<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecomay" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="bgStyle" >
        <item name="android:background">@color/black</item>
    </style>

    <style name="text_16_bold" parent="Widget.AppCompat.TextView">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:layout_gravity">center</item>
        <item name ="android:layout_marginTop">@dimen/_30sdp</item>
        <item name ="android:textColor">@color/blue</item>
        <item name ="android:textSize">@dimen/_16sdp</item>
        <item name ="android:textStyle">bold</item>
    </style>

    <style name="edit_14" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/black_gray</item>
    </style>

    <style name="button_14" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="text_12" parent="Widget.AppCompat.TextView">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:layout_gravity">center</item>
        <item name ="android:textColor">@color/white</item>
        <item name ="android:textSize">@dimen/_12sdp</item>
        <item name ="textAllCaps">true</item>
    </style>
</resources>